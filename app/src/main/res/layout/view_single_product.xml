<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="?android:dividerHorizontal"
            android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:id="@+id/view_pimg"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp" />

                    <TextView
                        android:id="@+id/view_pname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@id/view_pimg"
                        android:includeFontPadding="false"
                        android:text="Shriram"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/view_pcate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/view_pname"
                        android:layout_marginStart="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="2dp"
                        android:layout_toRightOf="@id/view_pimg"
                        android:includeFontPadding="false"
                        android:text="Shriram"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/view_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/view_pcate"
                        android:layout_marginStart="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="2dp"
                        android:layout_toRightOf="@id/view_pimg"
                        android:includeFontPadding="false"
                        android:text="Shriram"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/view_prating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/view_price"
                        android:layout_marginStart="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="2dp"
                        android:layout_toRightOf="@id/view_pimg"
                        android:includeFontPadding="false"
                        android:text="Shriram"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/view_update"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_below="@id/view_prating"
                        android:layout_marginStart="50dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="25dp"
                        android:background="#56CA5B"
                        android:text="Update"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/view_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_below="@id/view_prating"
                        android:layout_marginStart="50dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="25dp"
                        android:layout_toRightOf="@id/view_update"
                        android:background="#D14238"
                        android:text="Delete"
                        android:textColor="@color/white" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_below="@id/view_delete"
                        android:layout_marginTop="20dp"
                        android:background="#000000" />
                </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>